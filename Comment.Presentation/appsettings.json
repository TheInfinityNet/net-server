{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore.Mvc": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.Diagnostics.HealthChecks": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "IdentityService": "Information"
    },
    "Filters": {
      "Microsoft.AspNetCore.Diagnostics.HealthChecks": "Warning"
    }
  },

  "AllowedHosts": "*",

  "GrpcServers": {
    "IdentityService": "http://localhost:60001",
    "ProfileService": "http://localhost:60002",
    "RelationshipService": "http://localhost:60003",
    "PostService": "http://localhost:60005"
  },

  "Cors": {
    "AllowOrigins": [
      "http://localhost:60000"
    ]
  },

  "Server": {
    "BasePath": "/comment"
  },

  "Jwt": {
    "AccessKey": "",
    "Issuer": "org.infinity.net",
    "Audiences": [
      "webapp.com",
      "mobileapp"
    ]
  },

  "Swagger": {
    "Title": "Comment Service REST APIs",
    "ApiDocs": "comment-service-rest-api-service-dev",
    "Version": "v1",
    "Description": "This is the APIs documentation for Comment Service.",
    "ServerUrl": "http://localhost:60006/comment",
    "ServerDescription": "Comment Service API service For Development",
    "ContactName": "Infinity Net Organization",
    "ContactEmail": "tech.infinitynet.org@gmail.com"
  },

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=comment_service_db;Username=infinitynetUser;Password=Password@123"
  },

  "RabbitMQ": {
    "Host": "localhost",
    "ExchangeName": "comment-service-exchange",
    "UserName": "infinitynetUser",
    "Password": "Password@123"
  },

  "GrafanaStack": {
    "ServiceName": "CommentService"
  },

  "Metric": {
    "StandAloneKestrelServerEnabled": false,
    "Port": 60006,
    "Url": "/metrics",
    "Hostname": "+",
    "HttpMetricsEnabled": true,
    "SuppressDefaultMetrics": false
  },

  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "HTTP-Api-Basic",
        "Uri": "http://localhost:60006/healthz"
      }
    ],
    "EvaluationTimeOnSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },

  "Serilog": {
    "Using": [
      "Serilog.Exceptions",
      "Serilog.Sinks.Console"
    ],
    "Enrich": [
      "WithExceptionDetails"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error",
        "Microsoft.AspNetCore": "Warning",
        "System": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      } /*,
      {
        "Name": "File",
        "Args": {
          "path": "./bin/logs/Logs.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": { "uri": "http://localhost:3100" }
      }*/
    ]
  }

}
